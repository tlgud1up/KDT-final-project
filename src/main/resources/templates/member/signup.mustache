<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>signup page</title>
    <link rel="stylesheet" href="/css/common.css">

<style>
body {
	background-color: #F9FAFB;
	margin: 0;
}

/* 회원가입 칸 */
.signup-wrapper {
	display: flex;
	justify-content: center;
	align-items: center;
	min-height: 100vh;
	padding: calc(var(--header-height) + 60px) 20px 60px;
}

.signup-container {
	width: 100%;
	max-width: 520px;
	background: white;
	border-radius: 8px;
	padding: 40px 35px;
	box-shadow: 0 2px 8px rgba(0,0,0,0.08);
}

.signup-title {
	font-size: 24px;
	font-weight: 600;
	color: #43564A;
	margin-bottom: 30px;
	text-align: center;
}

.signup-form {
    display: flex;
    flex-direction: column;
    gap: 22px;
}

.form-group {
	display: flex;
    flex-direction: column;
	margin-bottom: 20px;
}

.form-group label,
.usertype-label {
    font-size: 15px;
    font-weight: 500;
    line-height: 1.59em;
    color: #364153;
    margin-bottom: 8px;
}

.required {
    color: #F1512E;
    margin-left: 2px;
}

.form-group input[type="text"],
.form-group input[type="password"],
.form-group input[type="date"] {
	width: 100%;
	padding: 12px 15px;
	border: 1px solid #bbb;
	border-radius: 10px;
	font-size: 13px;
	font-weight: 400;
	transition: border-color 0.3s;
	box-sizing: border-box;
	line-height: 1.33em;
}

.form-group input::placeholder {
    color: #99A1AF;
}

/* 에러 났을 때 */
.form-group input[type="text"].error,
.form-group input[type="password"].error,
.form-group input[type="date"].error {
    border-color: #F1512E;
}

/* 에러 메시지 */
.error-message {
    color: #F1512E;
    font-size: 13px;
    margin-top: 6px;
    display: none;
}

.error-message.show {
    display: block;
}

/* 라디오 버튼 */
.radio-group {
	display: flex;
	gap: 20px;
	margin-bottom: 20px;
	padding: 5px 0;
}

.radio-group input[type="radio"] {
	width: 18px;
	height: 18px;
	margin-right: 6px;
	cursor: pointer;
	accent-color: #43564A;
}

.radio-group label {
	display: flex;
	align-items: center;
	font-size: 14px;
	line-height: 1.59em;
	color: #333;
	cursor: pointer;
}

/* 회원가입 버튼 */
.btn-signup-submit {
	width: 100%;
	padding: 13px;
	background-color: #43564A;
	color: white;
	border: none;
	border-radius: 8px;
	font-size: 15px;
	font-weight: 500;
	cursor: pointer;
	margin-top: 10px;
	text-align: center;
	line-height: 1.59em;
	transition: background-color 0.3s;
}

.btn-signup-submit:hover {
	background-color: #3a4a3a;
}

.btn-signup-submit:disabled {
    background-color: #8B8B8B;
    cursor: not-allowed;
}

.login-link {
	display: flex;
	justify-content: center;
	text-align: center;
	margin-top: 20px;
	font-weight: 400;
	font-size: 15px;
	line-height: 1.59em;
	color: #666;
	 gap: 8px;
}

.login-link a {
	color: #43554A;
	text-decoration: none;
	font-weight: 500;
}

.login-link a:hover {
	text-decoration: underline;
}

/*알림 메시지*/
.alert-message {
    background: transparent;
    border: none;
    padding: 12px 16px;
    margin-bottom: 20px;
    color: #F1512E;
    font-size: 14px;
    font-weight: 500;
    display: none;
    text-align: center;
}

.alert-message.show {
    display: flex;
    animation: slideRight 0.3s ease-out;
    gap: 8px;
    align-items: center;
    justify-content: center;
}

</style>
</head>

<body class="light-theme">
{{> layout/header}}

<div class="signup-wrapper">
    <div class="signup-container">
		<h2 class="signup-title">회원가입</h2>

        {{#message}}
            <div class="alert-message show">{{message}}</div>
        {{/message}}
		<!--이미 사용 중인 아이디입니다.-->

	<form method="post" action="/signup" id="signupForm">
		<input type="hidden" name="_csrf" value="{{_csrf.token}}">

		<div class="form-group">
			<label for="username">아이디 <span class="required">*</span></label>
			<input type="text" id="username" name="username"  placeholder="아이디를 입력해주세요" value="{{signupRequest.username}}">
            <span class="error-message" id="usernameError">아이디를 입력해주세요.</span>
        </div>

		<div class="form-group">
			<label for="password">비밀번호 <span class="required">*</span></label>
			<input type="password" id="password" name="password" placeholder="비밀번호를 입력해주세요" value="{{signupRequest.password}}">
            <span class="error-message" id="passwordError">비밀번호를 입력해주세요.</span>
        </div>

		<div class="form-group">
			<label for="name">이름 <span class="required">*</span></label>
			<input type="text" id="name" name="name" placeholder="이름을 입력해 주세요" value="{{signupRequest.name}}">
            <span class="error-message" id="nameError">이름을 입력해주세요.</span>
		</div>

		<div class="form-group">
			<label for="birthday">생년월일 <span class="required">*</span></label>
			<input type="date" id="birthday" name="birthday">
            <span class="error-message" id="birthdayError">생년월일을 선택해주세요.</span>
		</div>

		<div>
			<label class="usertype-label">소속</label>
			<div class="radio-group">
				<label>
					<input type="radio" id="individual" name="userType" value="individual" checked>
					개인
				</label>

				<label>
					<input type="radio" id="business" name="userType" value="business">
					기업
				</label>
		</div>
		</div>

		<button type="submit" class="btn-signup-submit">회원가입 완료</button>
	</form>

        <div class="login-link">
            계정이 이미 있으신가요? <a href="/login">로그인</a>
        </div>
	</div>
</div>
<script>
    document.getElementById('signupForm').addEventListener('submit', function(e) {
        e.preventDefault();

        const username = document.getElementById('username');
        const password = document.getElementById('password');
        const name = document.getElementById('name');
        const birthday = document.getElementById('birthday');

        const usernameError = document.getElementById('usernameError');
        const passwordError = document.getElementById('passwordError');
        const nameError = document.getElementById('nameError');
        const birthdayError = document.getElementById('birthdayError');

        let isValid = true;

        // 아이디 입력 확인
        if (username.value.trim() === '') {
            username.classList.add('error');
             usernameError.textContent = '아이디를 입력해주세요.';
            usernameError.classList.add('show');
            isValid = false;
        } else {
            username.classList.remove('error');
            usernameError.classList.remove('show');
        }

        // 비밀번호 입력 확인
        if (password.value.trim() === '') {
            password.classList.add('error');
            passwordError.textContent = '비밀번호를 입력해주세요.';
            passwordError.classList.add('show');
            isValid = false;
        } else {
            password.classList.remove('error');
            passwordError.classList.remove('show');
        }

        // 이름 입력 확인
        if (name.value.trim() === '') {
            name.classList.add('error');
            nameError.classList.add('show');
            isValid = false;
        } else {
            name.classList.remove('error');
            nameError.classList.remove('show');
        }

        // 생년월일 입력 확인
        if (birthday.value === '') {
            birthday.classList.add('error');
            birthdayError.classList.add('show');
            isValid = false;
        } else {
            birthday.classList.remove('error');
            birthdayError.classList.remove('show');
        }

        if (isValid) {
            this.submit();
        }
    });

    const inputs = ['username', 'password', 'name', 'birthday'];
    inputs.forEach(id => {
        const input = document.getElementById(id);
        const error = document.getElementById(id + 'Error');

        input.addEventListener('input', function() {
            this.classList.remove('error');
            error.classList.remove('show');
        });
    });
</script>

</body>
</html>