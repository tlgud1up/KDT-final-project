<!--순환 골재는 JS-->
<script>
	document.addEventListener('DOMContentLoaded', function() {
		const section = document.getElementById('recycled-aggregate');
		const textElements = document.querySelectorAll('.texts p');
		const images = document.querySelectorAll('.aggregate-image');

		let lastScrollProgress = -1;
		let rafId = null;

		function handleScroll() {
			const rect = section.getBoundingClientRect();
			const windowHeight = window.innerHeight;
			const sectionHeight = section.offsetHeight;

			// 섹션이 화면에 들어온 정도 (0 ~ 1)
			const scrollProgress = Math.max(0, Math.min(1,
				(windowHeight - rect.top) / (windowHeight + sectionHeight)
			));

			// 변화가 미미하면 스킵 (최적화)
			if (Math.abs(scrollProgress - lastScrollProgress) < 0.001) return;
			lastScrollProgress = scrollProgress;

			// 1단계: 텍스트 등장 (0.15 ~ 0.4)
			textElements.forEach((text, index) => {
				const textStart = 0.15 + (index * 0.05);
				const textEnd = textStart + 0.08;

				let opacity, translateY;

				if (scrollProgress < textStart) {
					opacity = 0;
					translateY = 30;
				} else if (scrollProgress >= textStart && scrollProgress <= textEnd) {
					const progress = (scrollProgress - textStart) / (textEnd - textStart);
					opacity = progress;
					translateY = (1 - progress) * 30;
				} else {
					opacity = 1;
					translateY = 0;
				}

				text.style.opacity = opacity;
				text.style.transform = `translateY(${translateY}px)`;
			});

			// 2단계: 이미지 등장 (0.5 ~ 0.7) - 각 이미지가 트리거 시점에 바로 나타남
			images.forEach((img, index) => {
				const imageTrigger = 0.5 + (index * 0.15);

				if (scrollProgress >= imageTrigger) {
					img.style.visibility = 'visible';
					img.style.transform = 'translate(-50%, -50%) scale(1)';
					img.classList.add('show');
				} else {
					img.style.visibility = 'hidden';
					img.style.transform = 'translate(-50%, -50%) scale(0)';
					img.classList.remove('show');
				}
			});
		}

		function onScroll() {
			// 이전 요청 취소
			if (rafId) {
				cancelAnimationFrame(rafId);
			}

			// 새로운 애니메이션 프레임 요청
			rafId = requestAnimationFrame(handleScroll);
		}

		window.addEventListener('scroll', onScroll, { passive: true });
		handleScroll();
	});
</script>
